<h1>Listing beers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Style</th>
    <th>Brewery</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @beers.each do |beer| %>
  <tr>
    <td><%= link_to beer.name, beer %></td>
    <td><%= beer.style %></td>
    <td><%= beer.brewery_id %></td>
    <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
    <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to('New Beer', new_beer_path) if current_user %>
<%= link_to 'List breweries', breweries_path %>
